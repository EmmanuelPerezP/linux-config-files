! Font
urxvt.font: xft:Monospace:size=10

! Change font size bindings
URxvt.resize-font.smaller: C-minus
URxvt.resize-font.bigger: C-plus
URxvt.resize-font.reset: C-equal
URxvt.resize-font.show: C-question
URxvt.letterSpace:-3

! Tranparency
URxvt*depth: 32
URxvt*background: rgba:0000/0000/0200/dddd

urxvt.perl-ext-common:default,resize-font

!scrollbar
URxvt.scrollBar_right: True
URxvt.scrollBar_floating: True
URxvt.scrollColor: #8e1c3b

